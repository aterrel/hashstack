#!/bin/bash

set -e

$CMAKE/bin/cmake -DCMAKE_INSTALL_PREFIX="$ARTIFACT" \
    -DCMAKE_INSTALL_RPATH:STRING="$ARTIFACT/lib" \
    -DCMAKE_BUILD_TYPE:STRING=Release \
    -DCMAKE_Fortran_FLAGS_RELEASE:STRING="-O3 -fPIC -march=x86-64 -ffast-math -funroll-loops" \
    -DCMAKE_Fortran_COMPILER=$GFORTRAN/bin/gfortran \
    -DBUILD_TESTING:BOOL=OFF \
    -DBUILD_SHARED_LIBS:BOOL=ON \
    -DCMAKE_OSX_ARCHITECTURES=x86_64 \
    .
