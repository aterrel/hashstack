#!/bin/bash

set -e

# Needed because of: https://bugs.freedesktop.org/show_bug.cgi?id=63615
export M4=$M4/bin/m4
AUTOCONF_orig=$AUTOCONF
export AUTOCONF=$AUTOCONF_orig/bin/autoconf

$AUTOCONF_orig/bin/autoreconf -fi

# Build OSMesa
./configure --prefix=$ARTIFACT --enable-osmesa --disable-dri --disable-egl --enable-xlib-glx --disable-gallium-llvm --with-dri-drivers="" --with-gallium-drivers=""
